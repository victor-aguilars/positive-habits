<p id="notice"><%= notice %></p>

<h1 align="center">Listing all habits</h1>

<% @habits.each do |habit| %>
<div class="row">
  <div class="col-xs-8 col-xs-offset-2">
    <div class="well well-lg">
      <div class="object-title">
        <td><%= link_to habit.title, habit_path(habit) %></td>
      </div>
      <div class="object-body">
        <%= truncate(habit.description, lenght: 100) %>
      </div>
      <div class="button-actions">
        <%= link_to 'Edit this habit', edit_habit_path(habit), class: "btn btn-xs btn-primary" %>
        <%= link_to 'Delete this habit', habit_path(habit), method: :delete, data: {confirm: "Are you sure you want to delete the habit?"}, class: "btn btn-xs btn-danger" %>
      </div>
    </div>
  </div>
</div>
<% end %>
