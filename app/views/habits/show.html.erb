<p id="notice"><%= notice %></p>

<h2 align="center">Title: <%= @habit.title %></h2>

<div class="well col-xs-8 col-xs-offset-2">
  <h4 class="center description"><strong>Description:</strong></h4>
  <%=simple_format(@habit.description) %>
  <hr>
  <p>
    <h4 class="center description"><strong>Activities:</strong></h4>
    <% if  @habit.activities.empty? %>
      <p>No activities yet</p>
    <% end %>

    <% @habit.activities.each do |a| %>
      <p><%= a.description %> | <%= a.date %></p>
    <% end %>
  </p>
  <div class="button-actions">
    <%= link_to 'Edit this habit', edit_habit_path(@habit), class: "btn btn-xs btn-primary" %>
    <%= link_to 'Delete this habit', habit_path(@habit), method: :delete, data: {confirm: "Are you sure you want to delete the habit?"}, class: "btn btn-xs btn-danger" %>
    <%= link_to 'View all habits', habits_path, class: "btn btn-xs btn-success" %>
  </div>
</div>
